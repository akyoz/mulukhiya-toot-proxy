<%# encoding: UTF-8 -%>
<!doctype html>
<html lang="ja">
<head>
  <title><%= MulukhiyaTootProxy::Package.name %></title>
  <meta charset="utf-8">
  <meta name="robots" content="noindex,nofollow">
  <meta name="viewport" content="width=800">
  <link rel="stylesheet" type="text/css" href="/mulukhiya/style/default.css">
</head>
<body>
  <header><%= MulukhiyaTootProxy::Package.full_name %></header>
  <h2>アプリケーションの認証</h2>
  <% if params[:status] < 400 %>
    <p>正常終了。<a href="/oauth/authorized_applications">認証済みアプリ</a></p>
  <% else %>
    <p class="alert">エラー（<%= params[:status] %>）</p>
  <% end %>
  <pre><%= params[:result] %></pre>
  <p><a href="/mulukhiya/app/auth">戻る</p>
</body>
</html>
