doctype html
html lang='ja'
  head
    == slim.render 'fragment/metadata'
    == slim.render 'fragment/assets'
  body
    == slim.render 'fragment/header'
    == slim.render 'fragment/breadcrumbs', {current: '動作状況'}
    main id='app' class=env.type
      == slim.render 'fragment/message'
      h2 動作状況
      #result-container
        pre = '{{result}}'
        .field-update-button-container
          button v-on:click='load' 再読み込み
    == slim.render 'fragment/footer'
    javascript:
      'use strict'
      Vue.use(VTooltip)
      new Vue({
        el: '#app',
        data: {
          message: null,
          username: null,
          token_error: false,
          result: null,
        },
        mounted: function () {
          this.load()
        },
        methods: {
          load: function () {
            const href = '/mulukhiya/health'
            axios.get(href, {responseType: 'json'})
              .then(e => {
                this.result = e.data
                this.message = null
                document.getElementById('result-container').classList.remove('error')
              }).catch(e => {
                this.result = e.response.data
                this.message = e.message
                document.getElementById('result-container').classList.add('error')
              })
          },
        },
      })
