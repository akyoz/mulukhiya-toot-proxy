doctype html
html lang='ja'
  head
    == slim.render 'fragment/metadata'
    == slim.render 'fragment/assets'
  body
    == slim.render 'fragment/header'
    == slim.render 'fragment/breadcrumbs', {current: '動作状況'}
    main id='app' class=env.type
      == slim.render 'fragment/message'
      h2 動作状況
      .result-container ref='result_container'
        pre = '{{result}}'
        .field-update-button-container
          button @click='load' 再読み込み
    == slim.render 'fragment/footer'
    javascript:
      'use strict'
      Vue.use(VTooltip)
      new Vue({
        el: '#app',
        data: {
          message: null,
          username: null,
          token_error: false,
          token: localStorage.getItem('mulukhiya_token'),
          result: null,
        },
        mounted: function () {
          if (this.token) {
            const href = '/mulukhiya/config?token=' + encodeURIComponent(this.token)
            axios.get(href, {responseType: 'json'})
              .then(e => {
                this.username = e.data.account.username
              }).catch(e => {
                this.message = e.response.data.error || e.message
                this.token_error = true
              })
          } else {
            this.token_error = true
          }
          this.load()
        },
        methods: {
          load: function () {
            axios.get('/mulukhiya/health', {responseType: 'json'})
              .then(e => {
                this.result = e.data
                this.message = null
                this.$refs.result_container.classList.remove('error')
              }).catch(e => {
                this.result = e.response.data
                this.message = e.response.data.error || e.message
                this.$refs.result_container.classList.add('error')
              })
          },
        },
      })
