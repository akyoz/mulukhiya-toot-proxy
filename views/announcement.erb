<%# encoding: UTF-8 -%>
<% if @params[:title] -%>
## <%= @params[:title] %>

<% end -%>
<% if @params[:start_date] && @params[:end_date] -%>
<% if @params[:all_day] -%>
<%= @params[:start_date].strftime('%Y/%m/%d') %> 〜 <%= @params[:end_date].strftime('%Y/%m/%d') %>
<% else -%>
<%= @params[:start_date].strftime('%Y/%m/%d %H:%M') %> 〜 <%= @params[:end_date].strftime('%Y/%m/%d %H:%M') %>
<% end -%>
<% end -%>
<%= @params[:body] %>
<% if @params[:image_url] -%>
![<%= File.basename(Ginseng::URI.parse(@params[:image_url]).path) %>](<%= @params[:image_url] %>)
<% end -%>
