doctype html
html lang='ja'
  head
    == slim.render 'fragment/metadata'
    == slim.render 'fragment/assets'
  body
    == slim.render 'fragment/header'
    == slim.render 'fragment/breadcrumbs'
    main id='app' class=env.type
      == slim.render 'fragment/message'
      h1 = package.name
      nav class='menu'
        - if controller.tag_feed?
          a href='/mulukhiya/app/feeds' デフォルトタグのAtomフィード
        - else
          a href='#'
            = 'デフォルトタグのAtomフィード '
            span class='alert' 非対応
        - if controller.webhook?
          a href='/mulukhiya/app/config' v-if='username' 環境設定
          a href='#' v-else=''
            | 環境設定
            span class='alert' 未認証
        - else
          a href='#'
            = '環境設定 '
            span class='alert' 非対応
        a href='/mulukhiya/app/health' 動作状況
    == slim.render 'fragment/footer'
    javascript:
      Vue.use(VTooltip)
      new Vue({
        el: '#app',
        data: {
          message: null,
          username: null,
          token_error: false,
        },
        mounted: function () {
          'use strict'
          const token = localStorage.getItem('mulukhiya_token')
          if (token) {
            const href = '/mulukhiya/config?token=' + encodeURIComponent(token)
            axios.get(href, {responseType: 'json'})
              .then(e => {
                this.username = e.data.account.username
              }).catch(e => {
                this.message = e.message
                this.token_error = true
              })
          } else {
            this.token_error = true
          }
        },
      })
